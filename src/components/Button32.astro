---
const { title,  url} = Astro.props 

---

<!-- HTML !-->
<a href={url}  >
<button class="button-32" type="button" role="button"  aria-label={title}>{title}</button>
</a>



<style>
/* CSS */
.button-32 {
    margin:6px;
  background-color: #fff;
  border-radius: 12px;
  color: #17577B;
  cursor: pointer;
  font-weight: bold;
  padding: 10px 15px;
  text-align: center;
  transition: 100ms;
  width: 130px;
  height: 130px;
  box-sizing: border-box;
  border: 0;
  font-size: .8em;
  user-select: none;
  -webkit-user-select: none;
  touch-action: manipulation;
}

.button-32:not(:disabled):hover,
.button-32:not(:disabled):focus {
  outline: 0;
  background: #17577B;
  box-shadow: 0 0 0 2px rgba(0,0,0,.2), 0 3px 8px 0 rgba(0,0,0,.15);
  font-style: italic;
  color:#fff;
}

.button-32:disabled {
  filter: saturate(0.2) opacity(0.5);
  -webkit-filter: saturate(0.2) opacity(0.5);
  cursor: not-allowed;
}
    </style>