---
const { title,  url,  buttonText, addText } = Astro.props 
import LaunchSVG from '../images/SVG/launch.svg';

---


        <a href={url} >
        <span class='articleContent'>
          
            <h4><span class='articleHeader'>{buttonText}</span></h4>
            <button class='button'>Begin Module &#62;</button>
        </span>
        </a>




<style>
  .button {
  background-color:var(--color-secondary); /* Green */
  border: none;
  color: white;
  padding: 4px 11px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 12px;
  border:1px solid black;
}
.button {
  transition-duration: 0.4s;
}

.button:hover {
  background-color: var(--color-accent); 
  color: white;
}
 .articleHeader{
  display: flex;
  flex-wrap: nowrap;
  min-width: 100&;
  justify-content: baseline;
  
}
.articleContent{
    width: 100%;
    
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap:20px;
  justify-content: flex-start;
  justify-items: center;

}
a{
  display: block;
  padding-left:.1em;
  line-height: 40px;
  font-size: 18px;
  font-family: sans-serif;
  text-decoration: none;
  color: #333;
  letter-spacing: .8px;
  text-align: left;
  position: relative;
  transition: all .35s;
  background-repeat: no-repeat;
  background-position: left;
  z-index: 1;
}

a span{
  position: relative;
  z-index: 2;
}


a:after{
  position: absolute;
  content: attr(data-hover);
  top: 0;
  left: 0;
  width: 0;
  height: 100%;
/*  background: var(--color-accent);*/
  /*background-image: url('../images/SVG/LG-RArrow.svg');*/
  background-repeat: no-repeat;
  background-position: right;
  transition: all .35s;
}

a:hover{
  color: var(--color-accent);
}

a:hover:after{
  width: 100%;
}


@media all and (max-width:30em){
    a.{
    display:block;
    margin:0.4em auto;
  
}

}

</style>