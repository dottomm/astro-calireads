---
export interface Props {

title: string;
body: string;
url: string;
dark?: boolean;
}

const { title, body, url, dark = false } = Astro.props as Props
---

<div class={`card ${dark && 'dark'}`}>
<h3><a href={url}>{title}</a></h3>
<p>{body}</p>

</div>
<style>

.card {
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.card a {
  color:#fff;
  text-decoration: underline;
}

.card a:hover{
  color:#AED135;
}

.dark{
    background: var(--color-secondary);
    color:#fff;
}
</style>